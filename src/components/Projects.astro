---
import GitHub from "./icons/GitHub.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Unity from "./icons/Unity.astro"
import Vue from "./icons/Vue.astro"
import Build from "./icons/build_icon.astro"
import Cancel from "./icons/cancel_icon.astro"
import Finish from "./icons/finishicon.astro"
import GO from "./icons/Go.astro"

export const TAGS = {
  UNITY: {
    name: "Unity",
    class: "bg-white text-black",
    icon: Unity,
  },
    GOLANG : {
    name: "GO",
    class : "bg-white text-blue-500",
    icon : GO
  },
  VUE:{
    name: "Vue.js",
    class: "bg-white text-green-600",
    icon: Vue,
  },
  DEVELOP:{
    name : "Desarrollo",
    class : "bg-teal-500",
    icon : Build
  },
  CANCEL :{
    name : "Cancelado",
    class : "bg-red-400",
    icon : Cancel
  },
  FINISH : {
    name : "Finalizado",
    class : "bg-green-500", 
    icon : Finish
  },

}

const TAG_ENTRIES = Object.entries(TAGS)
const tagKeyByObject = new Map(TAG_ENTRIES.map(([key, tag]) => [tag, key]))

const ALL_FILTER = "ALL"


const PROJECTS = [
  {
    title: "City Builders",
    description: "City Builders, es el proyecto de grado de mi carrera, un proyecto creado como  prototipo de herramienta enfocada a la preservación cultural para el pueblo de Bugalagrande, Valle del Cauca",
    link: "https://archivesstudio.itch.io/city-builders",
    image: "/projects/CityBuilders.webp",
    tags: [TAGS.UNITY, TAGS.FINISH]
  },
  {
    title: "AstroGas",
    description: "AstroGas es un juego creado por Archives Games Studio para la Cali GameJam #2, fui el diseñador y programador principal durante toda la semana de la competencia.",
    link: "https://archivesstudio.itch.io/astrogas",
    image:  "/projects/Astrogas.webp",
    tags: [TAGS.UNITY, TAGS.FINISH]
  },
  {
    title: "Cholao",
    description:
      "Cholao es un juego desarrollado por Archives Videogames Studio para la tercera edición de la Cali Game Jam, quedando en el sexto puesto en general y ganando en la categoria 'Mejor Uso Del Tema'",
    link: "https://archivesstudio.itch.io/cholao",
    image: "/projects/Cholao.webp",
    tags: [TAGS.UNITY, TAGS.FINISH] ,
  },
  {
    title: "Triggerito",
    description:
      "Triggerito es un proyecto creado como acortador de url y un relay entre Github y Discord para la comunicacion entre webhook, desarrollado principalmente con Go",
    github: "https://github.com/maikreyes/url-shortening-service/",
    image: "/projects/Triggerito.webp",
    tags: [TAGS.GOLANG ,TAGS.DEVELOP] ,
  },
  {
    title: "Stocks Dashboard",
    description:
      "Dashboard de acciones desarrollado con Go y Vuejs, es un proyecto personal para aprender a desarrollar con Go y Vuejs",
    github: "https://github.com/maikreyes/go-vue-journey",
    image: "/projects/StocksDashboard.webp",
    tags: [TAGS.GOLANG, TAGS.VUE, TAGS.FINISH] ,
  },

]
---
<div id="project-filters" class="flex flex-wrap gap-x-4 gap-y-2 mb-8">
  <button
    type="button"
    data-filter-tag={ALL_FILTER}
    aria-pressed="true"
    class="flex items-center gap-x-2 rounded-full text-m bg-gray-200 text-gray-800 dark:bg-gray-800 dark:text-gray-100 py-2 px-4"
  >
    Todos
  </button>
  {
    TAG_ENTRIES.map(([key, { name, class: tagClass, icon: Icon }]) => (
      <button
        type="button"
        data-filter-tag={key}
        aria-pressed="false"
        class={`flex items-center gap-x-2 rounded-full text-xs ${tagClass} py-1 px-2`}
      >
        <Icon class="size-4" />
        {name}
      </button>
    ))
  }
</div>

<div id="projects-list" class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => {
      const projectTagKeys = tags
        .map((tag) => tagKeyByObject.get(tag))
        .filter(Boolean)

      return (
    <article
      data-project
      data-project-tags={projectTagKeys.join(",")}
      class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0"
    >
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
      )
    })
  }
</div>

<script is:inline>
  ;(() => {
    const ALL = "ALL"
    const filterContainer = document.getElementById("project-filters")
    const projectsList = document.getElementById("projects-list")

    if (!filterContainer || !projectsList) return

    const buttons = Array.from(
      filterContainer.querySelectorAll("button[data-filter-tag]")
    )
    const projects = Array.from(
      projectsList.querySelectorAll("[data-project][data-project-tags]")
    )

    let activeTag = ALL

    const setPressed = (tag) => {
      buttons.forEach((button) => {
        button.setAttribute(
          "aria-pressed",
          button.dataset.filterTag === tag ? "true" : "false"
        )
      })
    }

    const applyFilter = (tag) => {
      projects.forEach((project) => {
        const tags = (project.dataset.projectTags || "")
          .split(",")
          .filter(Boolean)

        const shouldHide = tag !== ALL && !tags.includes(tag)
        project.style.display = shouldHide ? "none" : ""
      })
    }

    buttons.forEach((button) => {
      button.addEventListener("click", () => {
        const clickedTag = button.dataset.filterTag || ALL

        activeTag = clickedTag === activeTag ? ALL : clickedTag
        setPressed(activeTag)
        applyFilter(activeTag)
      })
    })

    setPressed(activeTag)
    applyFilter(activeTag)
  })()
</script>



